{
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "Node",
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ]
}